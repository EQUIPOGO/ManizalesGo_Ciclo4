<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ManizalesGo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/gray_black</item>
        <item name="colorOnPrimary">@color/gray_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/gray_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="main_Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="paragraph_Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>
    <style name="main_ST_Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="puntuacion">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_purple</item>
        <item name="android:textStyle">italic</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>
</resources>